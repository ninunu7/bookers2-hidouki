<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
    <% if current_user.id != @user.id %>
       <% if current_user.following?(@user) %>
          <button type="button" class="btn btn-info mt-2"><%= link_to 'フォロー外す', user_relationships_path(@user.id),class: "text-white text-decoration-none", method: :DELETE %></button>
          <% else %>
            <button type="button" class="btn btn-success mt-2"><%= link_to 'フォローする', user_relationships_path(@user.id),class: "text-white text-decoration-none", method: :POST %></button>
          <% end %>
          <% end %>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render partial: 'books/index', locals: { book: @book} %>

    </div>
  </div>
</div>